/* swiper */

.activity{
  width: 750rpx;
  height: 375rpx;
  text-align: center;
}

.slide-image{
  width: 90%;
  height: 80%;
  margin-top: 30rpx;
  /* border: 1px solid #d8d8d8; */
  border-radius: 10px;
  background-color: #fff;
  box-shadow:0px 3px 25px rgba(132, 0, 0, 0.2);
}


/* posts */

.post-avatar {
  float:left;
  width: 64rpx;
  height: 64rpx;
  margin: 6rpx;
  border-radius: 50%;
}


.post {
  margin-top:12px;
  background-color: #fff;
  padding: 15px 20px;
  box-shadow:0px 2px 5px #e7e7e7;
  word-break:break-all;
  animation-name: enter;
  animation-duration: 1s;
}

.post_shadow {
  margin: 10px;
  border: 1px solid #d8d8d8;
  border-radius: 5px;
  background-color: #fff;
  padding: 10px;
  box-shadow:0px 2px 5px #efefef;
}

.post_icons{
  max-width: 20px;
  max-height: 20px;
  margin: 0;
  padding: 0;
  vertical-align: bottom;
  opacity: 0.3;
  padding-right: 10px;
}

.post_user {
  padding-left: 20rpx;
  color: #727272;
  font-size: 14px;
}

.post_time {
  padding-left: 20rpx;
  color: #cecece;
  font-size: 11px;
}

.post_title {
  color: #545454;
  padding-top: 3px;
  padding-bottom: 10px;
  display: block;
  font-size: 15px;
}

.post_tag {
  display: inline;
  padding: 0.1em 0.6em 0.1em 0.6em;
  margin-right: 3px;
  font-size: 11px;
  line-height: 1;
  text-align: center;
  white-space: nowrap;
  vertical-align: baseline;
  border-radius: 30px;
  border-style: hidden;
  background: #ebebeb;
  color: #868686;
  font-weight: normal;
  border: 0px;
  /* background: #efefef; */

  animation-name: enter;
  animation-duration: 1s;
}


.post_actions{
  
  color: #545454;
  font-size: 12px;

}

.post_loading_text{
  text-align:center;
  padding:20px;
  color:silver;
  font-size:30rpx;
  padding-bottom: 40px;
}

.post_comment{
  background: rgb(248, 248, 248);
  margin-top: 5px;
  font-size: 12px;
  padding:8px;
}

.post_comment_user{
  color: rgb(0, 110, 153);
  padding-top: 3px;
  font-weight: bold;
  
}

.post_zone{
  background: rgb(231, 231, 231);
  padding-left: 10px;
  padding-right: 10px;
  color: gray;
  border-radius: 30px;
  float: right;
  font-size:12.6px;
  opacity: 0.6;
  line-height: 25px;
  text-align: center;
}


/* UCL pages */

.name{
  font-size:20px;
  padding-top:10px;
  padding-bottom:10px;
}

.wrapper{

  background: rgb(245, 245, 245);
  background: url("https://cloud-minapp-24046.cloud.ifanrusercontent.com/1hpfDK6GPj3jBuRa.jpg");
  background-size: cover; 
  background-position: center center; 
  top:0;
  left:0;
  width:100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size:30rpx;
  
}


.ucl_bottom_bar{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-around;
  height: 100rpx;
  border-top: 1px solid rgb(243, 243, 243);
  bottom:0;
  background: white;
  width: 100%;
  position: fixed;
  padding-bottom: 40rpx;

}

.ucl_bar_actions{
  
  color: #545454;
  font-size: 15px;


}

.ucl_bar_placeholder{
  height: 188rpx;
}

.ucl_bar_btn{
  padding:0;
  background:none;
  margin:0;
  align-items: center;
  display: flex;
  flex-wrap: nowrap;
}

.ucl_bar_btn::after {
  border: 0;
}

.search_placeholder{
  height:300rpx;width:100%;padding-top:200rpx; text-align:center;align-items: center;
}


.search-input{
  background: white;
  border:1px solid silver;
  padding:7px;
  border-radius: 30px;
  
  width: 70%;
  margin-left: auto;
  margin-right: auto;
  float:left;
}



.additional-info{
  background: rgb(240, 240, 240);
  padding-left: 10px;
  padding-right: 10px;
  color: black;
  border-radius: 30px;
  white-space: nowrap;
  font-size:10px;
}


.navbar_placeholder{
  top: 0;
  left: 0;
  position: fixed;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.5), rgba(255, 255, 255, 0)); 
  height: 150rpx;
  width: 100%;
  z-index: 1000;
}

.nav_placeholder_show{
  animation-name: enter;
  animation-duration: 2s;
}

.nav_placeholder_hide{
  visibility: hidden;
  opacity: 0;
  transition: visibility 0s 2s, opacity 2s linear;
}


/* gradient button */
.grd_button{
    width: 100px;
    margin: 20px auto;
    font-size: 14px;
    color: #fff;
    text-align: center;
    border-radius: 50px;

    background-image: linear-gradient(to right, #fc6076, #ff9a44);
    box-shadow: 0 3px 8px rgba(252, 104, 110, 0.45);
}

.grd_button::after{
  border: none; 
}

.grd_button_icon{
  padding:0;vertical-align:middle;opacity:1;
}


@keyframes enter {
  from {opacity: 0;}
  to {opacity: 1; }
}



