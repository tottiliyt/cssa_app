.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 150rpx 0;
  box-sizing: border-box;
} 


/* ------------ navigation ------------ */
.navigation {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 90rpx;
  line-height: 90rpx;
  background-color: rgb(252, 252, 252);
  font-size: 27rpx;
  color: #333;
  font-weight: 500;
 
