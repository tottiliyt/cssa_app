.card {
  margin-top:-80rpx;
  margin-left:30rpx;
  margin-right:30rpx;
  background-color: #fff;
  padding: 15px 20px;
  box-shadow:0px 3px 10px rgba(232, 73, 73, 0.281);
  word-break:break-all;
  border-radius: 6px;

  animation-name: enter;
  animation-duration: 1s;

  font-size: 24rpx;
  display: flex;
  flex-direction: row;
}

.xuelianka{
  height:45px;
  width:70px;
  box-shadow:0px 3px 10px rgba(0, 0, 0, 0.2);
  background: #fcebd6;
  opacity: 0.8;
  border-radius: 3px;
  margin-right: 15px;
}

.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: white;
    z-index: 1;
    opacity: 0.3;
}

.title{
  font-size:18px;
  opacity: 0.5;
  flex-grow: 1;

}

.filter_btn{
  box-shadow:0px 3px 10px rgba(0, 0, 0, 0.1);
  color: gray;
  border-radius: 20px;
  background: white;
  padding: 5px 15px;
  font-size: 14px;
  margin: 0 5px;
}

.options{
  display: flex;
  justify-content: space-between;
  align-items: baseline;
padding: 10px 20px;
  margin-top: 20px;
}

.filter{
  padding: 5%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 14px;
  background: #ffffff;
  box-shadow:0px 3px 10px rgba(0, 0, 0, 0.1);
  max-height: 500px;
  overflow: hidden;

  margin-bottom: 30px;

  transition: 2s;
}

.filterHide{
  opacity: 0;
  max-height: 0px;
  padding: 0;
  margin:0;
}

.filter input{
  height: 10px;
  line-height: 10px;
  width: 95%;
  padding:3px 10px;

}

.filter .post_tag{
  font-size: 12px;
  margin:2px;
  margin-right: 5px;
  
}

.block{
  margin: 5vw;
  height: 100px;
}

.rest_img{
  border-radius: 10px 0px 0px 10px;
  width: 30vw;
  height: 100%;
  min-width: 30%;

}

