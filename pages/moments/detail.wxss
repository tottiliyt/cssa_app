page{
  background: #fafafa;
  margin-top:30px
}


.comment_title{
  font-size: 16px;
  color: grey;
padding:10px;padding-left:20px;padding-bottom:20px;
  /* border-bottom: 1rpx solid rgb(224, 224, 224); */
}


.comment{
  position: fixed;
  bottom: 0;
  background: #f3f3f3;
  z-index: 1000;
  width:100%;
  padding:10px;
}

.comment_text{
  background: white;
  border: 1px #d3d3d3;
  font-size: 16px;
  padding:5px;
}

/* 遮罩层 */
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 500;
    opacity: 0.5;
}

.keyboard_placeholder{
  height: 500rpx;
}

.comment_line{
  border-top: 1rpx solid rgb(241, 241, 241);
  padding: 10px;
  padding-left:30px;
  padding-right:30px;
  
}

.action_bar{
  margin-top:30px;display:flex;flex-wrap: nowrap;align-items: center;justify-content: space-around;
}